<div class="flex h-screen bg-gray-100" data-controller="chat" data-chat-conversation-id-value="<%= @conversation.id %>">
  <!-- Sidebar: Conversation History -->
  <aside class="w-72 bg-gray-900 text-white flex flex-col">
    <!-- Logo & New Chat -->
    <div class="p-4 border-b border-gray-700">
      <a href="<%= chat_path %>" class="flex items-center gap-3 px-4 py-3 bg-gray-800 hover:bg-gray-700 rounded-lg transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        <span class="font-medium">New Chat</span>
      </a>
    </div>

    <!-- Conversation List -->
    <nav class="flex-1 overflow-y-auto p-2" data-chat-target="conversationList">
      <% if @conversations.present? %>
        <div class="space-y-1">
          <% @conversations.each do |conv| %>
            <a href="<%= chat_conversation_path(conv) %>"
               class="flex items-center gap-3 px-4 py-3 rounded-lg transition-colors <%= conv.id == @conversation.id ? 'bg-gray-700' : 'hover:bg-gray-800' %>"
               data-conversation-id="<%= conv.id %>">
              <svg class="w-5 h-5 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
              <span class="truncate text-sm text-gray-300"><%= conv.display_title %></span>
            </a>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-sm px-4 py-2">No conversations yet</p>
      <% end %>
    </nav>

    <!-- User Menu -->
    <div class="p-4 border-t border-gray-700">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-sm font-bold">
            <%= current_user.email[0].upcase %>
          </div>
          <span class="text-sm text-gray-300 truncate max-w-[120px]"><%= current_user.email %></span>
        </div>
        <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "p-2 text-gray-400 hover:text-white hover:bg-gray-700 rounded-lg transition-colors", title: "Sign out" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
          </svg>
        <% end %>
      </div>
    </div>
  </aside>

  <!-- Main Chat Area -->
  <div class="flex-1 flex flex-col">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200 px-6 py-4 flex items-center justify-between">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
        </div>
        <div>
          <h1 class="text-xl font-semibold text-gray-900" data-chat-target="conversationTitle"><%= @conversation.display_title.truncate(40) %></h1>
          <p class="text-sm text-gray-500">AI Product Assistant</p>
        </div>
      </div>
      <div class="flex items-center gap-2 text-sm text-gray-500">
        <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-green-100 text-green-700">
          <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
          Online
        </span>
      </div>
    </header>

    <!-- Chat Messages -->
    <main class="flex-1 overflow-y-auto px-4 py-6" data-chat-target="messages">
      <div class="max-w-3xl mx-auto space-y-6">
        <!-- Existing Messages -->
        <% @conversation.messages.each do |message| %>
          <% if message.role == 'user' %>
            <div class="flex gap-4 justify-end">
              <div class="max-w-[80%]">
                <div class="bg-gradient-to-r from-blue-500 to-purple-600 text-white rounded-2xl rounded-tr-none px-4 py-3 shadow-sm">
                  <p><%= message.content %></p>
                </div>
              </div>
              <div class="flex-shrink-0 w-8 h-8 bg-gray-300 rounded-lg flex items-center justify-center text-gray-600 font-medium text-sm">
                <%= current_user.email[0].upcase %>
              </div>
            </div>
          <% else %>
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <div class="bg-white rounded-2xl rounded-tl-none px-4 py-3 shadow-sm border border-gray-100 prose prose-sm max-w-none">
                  <%= raw markdown_to_html(message.content) %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>

        <!-- Welcome Message (only for new conversations) -->
        <% if @conversation.messages.empty? %>
          <div class="flex gap-4" data-chat-target="welcome">
            <div class="flex-shrink-0 w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <div class="bg-white rounded-2xl rounded-tl-none px-4 py-3 shadow-sm border border-gray-100">
                <p class="text-gray-700">
                  Hello! I'm your AI product assistant. I can help you find electronics, compare products, and answer questions about our catalog.
                </p>
                <p class="text-gray-700 mt-2">Try asking me:</p>
                <ul class="mt-2 space-y-1 text-gray-600 text-sm">
                  <li class="cursor-pointer hover:text-blue-600" data-action="click->chat#quickQuestion">"Show me laptops under $1500"</li>
                  <li class="cursor-pointer hover:text-blue-600" data-action="click->chat#quickQuestion">"Compare the best Apple products"</li>
                  <li class="cursor-pointer hover:text-blue-600" data-action="click->chat#quickQuestion">"What tablets do you have in stock?"</li>
                  <li class="cursor-pointer hover:text-blue-600" data-action="click->chat#quickQuestion">"How many products are from Dell?"</li>
                </ul>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </main>

    <!-- Input Area -->
    <footer class="bg-white border-t border-gray-200 px-4 py-4">
      <div class="max-w-3xl mx-auto">
        <form data-action="submit->chat#send" class="flex gap-3">
          <div class="flex-1 relative">
            <input
              type="text"
              data-chat-target="input"
              placeholder="Ask about products, prices, specifications..."
              class="w-full px-4 py-3 bg-gray-100 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
              autocomplete="off"
            >
          </div>
          <button
            type="submit"
            data-chat-target="sendButton"
            class="px-6 py-3 bg-gradient-to-r from-blue-500 to-purple-600 text-white font-medium rounded-xl hover:opacity-90 transition-all disabled:opacity-50 disabled:cursor-not-allowed flex items-center gap-2"
          >
            <span>Send</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </button>
        </form>
        <p class="text-xs text-gray-400 mt-2 text-center">
          Powered by Google Gemini â€¢ 1,000+ products in catalog
        </p>
      </div>
    </footer>
  </div>
</div>
